{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/styles/*": ["./styles/*"],
      "@/config/*": ["./config/*"],
      "@/data/*": ["./data/*"],
      "@/assets/*": ["./assets/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.tsx", "**/*"],
  "exclude": ["node_modules"]
}
